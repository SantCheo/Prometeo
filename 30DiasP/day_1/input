from math import pi
def area(r):
    areaC= pi* (r**2)
    return areaC


valores = [1, 3, 0, -1, -3, 2+3j, True, 'hola'] 


for v in valores: 
    areaCalculada = area(v) 
    print('Para el valor', v, 'el área es', areaCalculada) 

    

#Con input() también puedes capturar múltiples valores en una sola línea utilizando el método split():
print("Obtener múltiples valores a la vez")
country, city = input("¿En qué país y ciudad vives?").split()

print(f"Vives en {country}, {city}")